<form action="/cats/edit/{{cat._id}}" method="POST" class="cat-form" enctype="multipart/form-data">
    <h2>Edit Cat</h2>
    <label for="name">Name</label>
    <input type="text" id="name" value="{{cat.name}}">
    <label for="description">Description</label>
    <textarea
        id="description" name="description">{{cat.description}}</textarea>
    <label for="image">Image</label>
    <input type="file" id="image" name="imageUrl" value="{{cat.imageUrl}}">
    <label for="group">Breed</label>
    <select id="group">
        {{#each breeds}}
            <option value="{{breed}}" name="breed">{{breed}}</option>
        {{/each}}
    </select>
    <button type="submit">Edit Cat</button>
</form>